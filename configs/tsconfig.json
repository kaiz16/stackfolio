{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "NodeNext",
    "outDir": "dist",
    "lib": ["ES2022", "dom", "dom.iterable"], // Only if your code runs in the browser
    "jsx": "preserve", // Only if your code uses React
    "useUnknownInCatchVariables": true,
    "paths": {
      "test/*": ["test/*"],
      "~/*": ["src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"],
    "baseUrl": ".",

    /* Strictness. Remove this if you don't want strict mode */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "include": ["src", "test"] // or ["**/*.ts"]
}
